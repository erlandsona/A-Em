#!/usr/bin/env bash
set -e

shopt -s extglob

#############################
# Copy Static Assets
#############################

            # prevent cp errors
# Copy Manifests and Indexes
cp app/assets/!(icons|images)        public/

# Copy Images
cp -R app/assets/images              public/

# Copy Icons
cp app/assets/icons/favicon*         public/
cp app/assets/icons/android-chrome/* public/
cp app/assets/icons/apple/*          public/
cp app/assets/icons/microsoft/*      public/

# Compile elm-css
elm-css app/Stylesheets.elm -o      public/
